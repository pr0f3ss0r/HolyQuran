<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp">

    <LinearLayout
        android:id="@+id/juzLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/border"
        android:padding="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/juzNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="ذَٰلِكَ الْكِتَابُ لَا رَيْبَ َۛ "
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/pageNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="page"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/juzNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/surahNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="suratul-Baqarah"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18ssp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>